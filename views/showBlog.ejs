<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <title>User Blog</title>
</head>
<body>   
    <%- include('./partials/nav') %>   
    <!-- <%= blog %> -->

    <div class="container mt-5">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" alt="" width="650px" style="margin-bottom: 50px;" >
        <pre><%= blog.body %></pre>
    </div>

    
    <div class="container mt-5">
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog.id %>" method="post">
                <div class="mb-3">                
                    <input type="text" class="form-control" id="comment" name="content" required>
                </div>  
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <% } %>      
        </div>
        
        <% if (locals.comments) { %>
            <div class="container mt-3">
                <h1>All comments</h1>
                <hr>
            </div>
            <% comments.forEach((c,i) => { %>
                <div class="container mb-3"> 
                    <h2><%= i+1 %>. <%= c.createdBy.fullName %></h2>
                    <p><%= c.content %></p>
                </div>  
                <% }) %>
        <% } %>
        
    <%- include('./partials/script.ejs') %>
</body>
</html>